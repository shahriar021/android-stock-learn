<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".records"
    android:padding="20dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    >
    <EditText
        android:id="@+id/idbo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="BO id:"
        android:textColorHint="@color/black"
        >
    </EditText>
    <EditText
        android:layout_below="@id/idbo"
        android:id="@+id/idstockname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="stock name:"
        android:textColorHint="@color/black"
        >
    </EditText>

    <EditText
        android:id="@+id/idquntity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idstockname"
        android:hint="quantity:"
        android:textColorHint="@color/black"></EditText>
    <EditText
        android:layout_below="@id/idquntity"
        android:id="@+id/idbyngprc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="buying price:"
        android:textColorHint="@color/black"
        >
    </EditText>
    <EditText
        android:layout_below="@id/idbyngprc"
        android:id="@+id/idsellingprice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="selling price:"
        android:textColorHint="@color/black"
        >
    </EditText>


    <!--<Spinner

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_below="@id/idsellingprice">

    </Spinner>-->
    <EditText
        android:layout_below="@id/idsellingprice"
        android:id="@+id/profitloss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="profit/loss:"
        android:textColorHint="@color/black"
        >
    </EditText>
    <TextView
        android:id="@+id/tx1"
        android:layout_below="@id/profitloss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="inserted"
        ></TextView>

    <Button
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="save"
        android:id="@+id/savebtn"
        android:layout_below="@id/tx1"
        android:layout_centerInParent="true"
        ></Button>
    <Button

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="show"
        android:id="@+id/showbtn"
        android:layout_below="@id/savebtn"
        ></Button>



</RelativeLayout>