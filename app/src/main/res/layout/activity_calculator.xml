<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".calculator"
    android:orientation="vertical"
    android:id="@+id/calculatorlayoutid"
    android:background="@drawable/i_list">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"

        >
        <EditText
            android:id="@+id/editbying"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="buying price:"
            android:inputType="number"
            android:layout_alignParentStart="true">

        </EditText>

        <EditText
            android:id="@+id/edtselprc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="selling price:"
            android:inputType="number"
            android:layout_alignParentEnd="true">

        </EditText>

        <EditText
            android:id="@+id/editcommision"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="commision:"
            android:inputType="numberDecimal"
            android:layout_centerInParent="true">

        </EditText>






    </RelativeLayout>
    <EditText
        android:id="@+id/editquantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="total shares:"
        android:inputType="number"
        android:layout_gravity="center_horizontal"
        >

    </EditText>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <Button
            android:id="@+id/btncalculatelosssprofit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="10dp"
            android:text="calculate">

        </Button>
        <Button
            android:id="@+id/btncalculatereset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:text="reset">

        </Button>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:id="@+id/calculatetext">

    </TextView>



</LinearLayout>